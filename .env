# ========================================
# CRM SYSTEM - ENVIRONMENT VARIABLES
# ========================================

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=crm_dev
DB_USER=crm_user
DB_PASSWORD=password_for_db

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=jwt_secret_512_bit
JWT_EXPIRES_IN=15m 
JWT_REFRESH_EXPIRES_IN=3d

# ========================================
# SERVER CONFIGURATION (нод_энв development для стейджа, production для прода)
# ========================================
NODE_ENV=development 
PORT=5001
CORS_ORIGIN=http://localhost:3000

# ========================================
# KAFKA CONFIGURATION
# ========================================
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=crm-backend
KAFKA_GROUP_ID=crm-backend-group

# ========================================
# TELEGRAM BOT CONFIGURATION (не трогать)
# ========================================
TELEGRAM_BOT_TOKEN=8077238326:AAEwgWeXG9mDKrr-1xmaLmz1PcsGZpY22Ak
TELEGRAM_CHAT_ID=-1002267469682
TELEGRAM_TOPIC_ID=2

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info

# ========================================
# GRAFANA CONFIGURATION
# ========================================
GRAFANA_PASSWORD=password_for_grafana

# ========================================
# SECURITY CONFIGURATION
# ========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# FEATURE FLAGS (для прода сваггер false)
# ========================================
ENABLE_SWAGGER=true
ENABLE_WEBSOCKET=false
ENABLE_KAFKA=true
ENABLE_TELEGRAM_BOT=true

# ========================================
# DEVELOPMENT SETTINGS (для прода fasle)
# ========================================
DEBUG=true
VERBOSE_LOGGING=true
